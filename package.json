    "dayjs": "^1.11.9",
    "express": "^4.18.2",
    "express-timeout-handler": "^2.2.2",
    "express-useragent": "^1.0.15",
    "jsonwebtoken": "^9.0.1",
    "jwt-decode": "^3.1.2",
    "mongoose": "^7.4.5",
    "morgan": "^1.10.0",
    "open-graph-scraper": "5.2.3",
    "pinia": "^2.1.6",
    "prettier-plugin-tailwindcss": "^0.5.3",
